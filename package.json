{
  "name": "jboard",
  "version": "0.0.1",
  "main": "src/main.js",
  "license": "MIT",
  "author": "YPCloud",
  "description": "The jboard",
  "scripts": {
    "start": "electron .",
    "test": "TEST=true electron .",
    "dist:armhf": "electron-builder --linux --armv7l snap",
    "dist": "electron-builder --linux --x64 snap"
  },
  "build": {
    "appId": "com.jboard",
   "productName": "jboard",
    "linux": {
      "target": "snap",
      "icon": "gui/icon.png"
    },
    "snap": {
      "confinement": "strict",
      "summary": "The jboard",
      "grade": "stable",
      "desktop": "gui/jboard.desktop"
    }
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-builder": "^21.0.15"
  }
}
